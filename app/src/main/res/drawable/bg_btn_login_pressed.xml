<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00c5ec" />
            <corners
                android:topLeftRadius="50dip"
                android:topRightRadius="50dip"
                android:bottomLeftRadius="50dip"
                android:bottomRightRadius="50dip" />
        </shape>
    </item>
    <item android:top="3px" android:bottom="3px" android:left="3px" android:right="3px">
        <shape>
            <gradient
                android:startColor="#B2DFEE" android:endColor="#B2DFEE"
                android:type="linear" android:angle="90"
                android:centerX="0.5" android:centerY="0.5" />
            <corners
                android:topLeftRadius="50dip"
                android:topRightRadius="50dip"
                android:bottomLeftRadius="50dip"
                android:bottomRightRadius="50dip" />
        </shape>
    </item>
</layer-list>